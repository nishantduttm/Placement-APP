<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hiddenlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/companyNameHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#550909"
        android:fontFamily="@font/aldrich"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="Placement Drive Notifications"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/companyNameHeading">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgimage4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:text="Date: "
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/companyDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTextView"
        android:layout_toRightOf="@id/dateTextView"
        android:layout_alignBaseline="@id/dateTextView"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#433993"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="17/07/2001"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eligibilityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/dateTextView"
        android:text="Eligibility: "
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/companyEligibilityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyDateView"
        android:background="@drawable/rounded_corners"
        android:layout_toRightOf="@id/eligibilityTextView"
        android:layout_alignBaseline="@id/eligibilityTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#433993"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="Min 7 SGPA and from COMP Department"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/salaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/companyEligibilityView"
        android:text="Package: "
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/salaryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyEligibilityView"
        android:layout_toRightOf="@id/salaryTextView"
        android:layout_alignBaseline="@id/salaryTextView"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#433993"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="7.5 Lacs Per Annum"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/venueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/salaryTextView"
        android:text="Venue: "
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/companyVenueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/salaryView"
        android:layout_toRightOf="@id/venueTextView"
        android:layout_alignBaseline="@id/venueTextView"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#433993"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="Xoriant Offfice Chincheadasd aasda asd asda asd asdas dasdasd asd"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />


                <Button
                    android:id="@+id/ApplicationsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/venueTextView"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/aclonica"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Fill Application"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
