<androidx.cardview.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:layout_margin="10dp"
    card_view:contentPadding="20dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/write_answer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/questionTV"
            card_view:srcCompat="@drawable/ic_baseline_edit_24"/>

        <ImageView
            android:id="@+id/read_answer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@id/write_answer"
            android:layout_below="@id/questionTV"
            android:src="@drawable/read_answers"/>

        <TextView
            android:id="@+id/desc_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/write_answer"
            android:text="Write answer"
            android:layout_marginLeft="22dp"
            android:textColor="#000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/desc_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/read_answer"
            android:layout_toRightOf="@id/desc_write"
            android:text="All answers"
            android:layout_marginLeft="85dp"
            android:textColor="#000"
            android:textSize="14sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>