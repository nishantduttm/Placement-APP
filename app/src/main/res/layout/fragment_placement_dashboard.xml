<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#EAE5E4">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/abstractbg">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/indiralogo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Aravind Pidaparthy"
                        android:textSize="25sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"/>
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="215dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp">
                            
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F33210">

                                <TextView
                                android:id="@+id/appliedCompaniesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Applied:"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/appliedCompaniesView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/appliedCompaniesTextView"
                                    android:textSize="32sp"
                                    android:layout_marginBottom="10dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/appliedCompaniesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#939F16">

                                <TextView
                                    android:id="@+id/inProcessCompaniesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In-Process:"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"/>

                                <TextView
                                    android:id="@+id/inProcessCompaniesView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/inProcessCompaniesTextView"
                                    android:textSize="32sp"
                                    android:layout_marginBottom="10dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/inProcessCompaniesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#18F310">

                                <TextView
                                    android:id="@+id/placedCompaniesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Placed:"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/placedCompaniesView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/placedCompaniesTextView"
                                    android:textSize="32sp"
                                    android:layout_marginBottom="10dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/placedCompaniesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#6661EA">

                                <TextView
                                    android:id="@+id/notPlacedCompaniesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not Placed:"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"/>

                                <TextView
                                    android:id="@+id/notPlacedCompaniesView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/notPlacedCompaniesTextView"
                                    android:textSize="32sp"
                                    android:layout_marginBottom="10dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/notPlacedCompaniesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F310A7">

                                <TextView
                                    android:id="@+id/onHoldCompaniesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="On-Hold:"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/onHoldCompaniesView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/onHoldCompaniesTextView"
                                    android:textSize="32sp"
                                    android:layout_marginBottom="10dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/onHoldCompaniesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F3C210">

                                <TextView
                                    android:id="@+id/viewNoticesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Notices"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"/>

                                <ImageButton
                                    android:id="@+id/viewNoticesImageButton"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_below="@id/viewNoticesTextView"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_baseline_arrow_forward_24"
                                    android:background="@android:color/transparent"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/viewNoticesButton"
                                    android:background="@android:color/transparent"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>